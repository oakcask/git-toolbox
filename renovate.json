{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "matchDepTypes":[
        "action"
      ],
      "matchCurrentAge": "> 5 days",
      "automerge": true
    }
  ],
  "rangeStrategy": "bump",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github\\/workflows\\/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?)\\s+\\S+:\\s+?\"(?<currentValue>\\S+)\""
      ]
    }
  ]
}